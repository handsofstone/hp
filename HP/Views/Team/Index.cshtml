<div class="tab-content" id="teamTabContent">
    <div class="tab-pane fade show active" id="tabLineup" role="tabpanel" aria-labelledby="lineup-tab">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card my-sm-2">
                        <div class="card-body">
                            <form>
                                <div class="form-row align-items-center">
                                    <div class="col-auto">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                @Html.LabelFor(model => model.SelectedIntervalId, new { @class = "input-group-text d-none d-sm-block" })
                                            </div>
                                            @Html.DropDownListFor(model => model.SelectedIntervalId, Model.Intervals, new { @class = "custom-select" })
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <div class="form-inline">
                                            <button id="lineupSubmit" type="button" class="btn btn-default btn-success btn-xs-text" onclick="submitLineup()">
                                                <i class="material-icons" aria-hidden="true">publish</i> Submit
                                            </button>
                                            <button id="lineupReset" type="button" class="btn btn-default btn-danger btn-xs-text" onclick="resetLineup()">
                                                <i class="material-icons" aria-hidden="true">delete</i> Reset
                                            </button>
                                            <div class="btn-group-toggle" data-toggle="buttons">
                                                <label class="btn btn-outline-primary" id="benchToggle">
                                                    <input id="showBench" type="checkbox" autocomplete="on" />
                                                    <i class="material-icons" id="benchVisible" aria-hidden="true">visibility</i>
                                                    <i class="material-icons" id="benchHidden" aria-hidden="true">visibility_off</i>
                                                    <span class="d-none d-md-block">Bench</span>
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-auto">
                                        <span id="intervalStart" class="badge badge-pill badge-info">
                                            @Html.DisplayTextFor(model => model.SelectedStartTime)
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <table id="lineupTable" class="table table-bordered table-condensed table-striped" data-toggle="table" style="width:auto">
                        <thead>
                            <tr>
                                <th rowspan="2"><span id="submitted" class="badge badge-success">Submitted</span><span id="unsubmitted" class="badge badge-danger">Unsubmitted</span></th>
                                <th rowspan="2" class="text-capitalize">@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().Position)</th>
                                <th rowspan="2" class="text-capitalize">@Html.DisplayNameFor(model => model.LineupRows.FirstOrDefault().Name)</th>
                                <th rowspan="2" class="text-capitalize submit-show">GP</th>
                                <th colspan="3" class="text-capitalize text-center submit-show">@Html.DisplayDescriptionFor(model => model.LineupRows.FirstOrDefault().DayPoints)</th>
                                <th rowspan="2" class="text-capitalize submit-hide d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.LineupRows.FirstOrDefault().Schedule)</th>
                            </tr>
                            <tr>
                                <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().DayPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().DayPoints)</span></th>
                                <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().IntervalPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().IntervalPoints)</span></th>
                                <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().TotalPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().TotalPoints)</span></th>
                            </tr>
                        </thead>
                        <tbody id="lineup"></tbody>
                    </table>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="well-lg">
                                <div id="efficiency" class="pie"></div>
                                <div id="efficiency-label" class="pie-label"></div>
                                <h4 class="text-center">lineup efficiency</h4>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="well-lg">
                                <div id="distribution" class="pie"></div>
                                <h4 class="text-center">points distribution</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="tabRoster" role="tabpanel" aria-labelledby="roster-tab">
        <div class="container-fluid">
