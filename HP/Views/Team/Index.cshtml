@model HP.Models.TeamViewModel

@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loading-modal"></div>
<div id="addPlayerModal" class="modal fade" role="dialog">
    <div class="loading-modal"></div>
    <div class="modal-dialog">
        <!-- Add Players Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add/Drop Player(s)</h4>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="row propose-top">
                            <div class="col-lg-12">
                                <div class="form-group has-feedback">
                                    <label for="searchTerm">SEARCH</label>
                                    <input type="text" class="form-control type-ahead-textbox" id="searchTerm" autocomplete="off" autocorrect="off" autocapitalization="off" placeholder="Search players" style="visibility: visible;" onkeyup="searchNHLPlayer(this.value)">
                                    <span class="glyphicon glyphicon-search form-control-feedback"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div valign=top align=left bgcolor=#f4f1e8 class="col-lg-12 colorNote tableBody">
                                <strong>RESULTS</strong><br />
                            </div>
                        </div>
                        <div class="row propose-middle">
                            <div class="col-lg-12">
                                <ul id="searchResults" class="droppable" data-list-swap-group="addPlayer">
                                    <li><div class="loading-modal"></div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                <strong>ADDITIONS</strong>
                            </div>
                        </div>
                        <div class="row propose-bottom">
                            <div class="col-lg-12">
                                <ul id="rosterAdditions" class="droppable" data-list-swap-group="addPlayer"></ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row hidden-xs hidden-sm hidden-md propose-top">
                        </div>
                        <div class="row">
                            <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                <strong>ROSTER</strong>
                            </div>
                        </div>
                        <div class="row propose-middle">
                            <div class="col-lg-12">
                                <ul id="rosterAssets" class="droppable" data-list-swap-group="dropPlayer"></ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                <strong>DROPS</strong>
                            </div>
                        </div>
                        <div class="row propose-bottom">
                            <div class="col-lg-12">
                                <ul id="rosterDrops" class="droppable" data-list-swap-group="dropPlayer"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-default" value="Save" onclick="AddDropPlayers();" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div id="tradeModal" class="modal fade" role="dialog">
    <div class="loading-modal"></div>
    <div class="modal-dialog">
        <!-- Trade Players Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Trade Dashboard</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="panel with-nav-tabs panel-primary">
                        <div class="panel-heading">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tabOffers" data-toggle="tab">Offers <span id="tradeCount" class="badge">1</span></a></li>
                                <li><a href="#tabPropose" data-toggle="tab">Propose</a></li>
                            </ul>
                        </div>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane in active fade" id="tabOffers">
                                    <div class="row">
                                        <div class="col-lg-12" style="overflow:auto">
                                            <table id="offersTable" class="table table-bordered table-condensed table-responsive table-striped" data-toggle="table">
                                                <thead class="fixed_thead">
                                                    <tr>
                                                        <th>From</th>
                                                        <th>To</th>
                                                        <th>Expires</th>
                                                        <th>Receive</th>
                                                        <th>Send</th>
                                                        <th>Status</th>
                                                        <th>Notes</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="scroll-tbody"></tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-group btn-group-lg pull-right" role="group" aria-label="...">
                                                <button id="rejectTrade" type="button" class="btn btn-lg btn-danger" onclick="updateOffer(false)" disabled>
                                                    <i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
                                                </button>
                                                <button id="acceptTrade" type="button" class="btn btn-lg btn-success" onclick="updateOffer(true)" disabled>
                                                    <i class="glyphicon glyphicon-ok" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabPropose">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="row hidden-xs hidden-sm hidden-md propose-top">
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                                    <strong>MY ASSETS</strong>
                                                </div>
                                            </div>
                                            <div class="row propose-middle">
                                                <div class="col-lg-12">
                                                    <ul id="myAssets" class="droppable my"></ul>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                                    <strong>Offer:</strong>
                                                </div>
                                            </div>
                                            <div class="row propose-bottom">
                                                <div class="col-lg-12">
                                                    <ul id="myAssetsOffered" class="droppable my"></ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row propose-top">
                                                <div class="col-lg-12">
                                                    <label for="selectTraderPartner">Trade Partner</label>
                                                    <select id="selectTradePartner" class="form-control"></select>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div valign=top align=left bgcolor=#f4f1e8 class="col-lg-12 colorNote tableBody"><strong>PARTNER ASSETS</strong><br /></div>
                                            </div>
                                            <div class="row propose-middle">
                                                <div class="col-lg-12">
                                                    <ul id="partnerAssets" class="droppable partner"></ul>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12 colorNote tableBody" bgcolor=#f4f1e8>
                                                    <strong>Request:</strong>
                                                </div>
                                            </div>
                                            <div class="row propose-bottom">
                                                <div class="col-lg-12">
                                                    <ul id="partnerAssetsRequested" class="droppable partner"></ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="comment">Comment:</label>
                                                <textarea class="form-control" rows="3" id="comment"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-group btn-group-lg pull-right" role="group" aria-label="...">
                                                <a href="#" class="btn btn-lg btn-danger" role="button" onclick="resetTradeDashboard();"><span class="glyphicon glyphicon-remove"></span></a>
                                                <a href="#" class="btn btn-lg btn-success" role="button" onclick="sendOffer();"><span class="glyphicon glyphicon-send"></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("SubmitRoster", "Team", FormMethod.Post))
{
    @Html.HiddenFor(p => Model.TeamId, new { @id = "TeamId" })
}
<div class="panel with-nav-tabs panel-primary">
    <div class="panel-heading">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tabLineup" data-toggle="tab">Lineup</a></li>
            <li><a href="#tabRoster" data-toggle="tab">Roster</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div class="tab-pane fade in active" id="tabLineup">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form class="form-inline">
                                        <div class="form-group">
                                            <span class="control-label hidden-xs">
                                                @Html.LabelFor(model => model.SelectedIntervalId)
                                            </span>
                                            @Html.DropDownListFor(model => model.SelectedIntervalId, Model.Intervals, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <button id="lineupSubmit" type="button" class="btn btn-default btn-success btn-xs-text" onclick="submitLineup()" @(Model.CanSubmit ? "" : "disabled" )>
                                                <i class="glyphicon glyphicon-save" aria-hidden="true"></i> Submit
                                            </button>
                                            <button id="lineupReset" type="button" class="btn btn-default btn-danger btn-xs-text" onclick="resetLineup()" @(Model.CanSubmit ? "" : "disabled" )>
                                                <i class="glyphicon glyphicon-trash" aria-hidden="true"></i> Reset
                                            </button>
                                            <span id="intervalStart" class="label label-info">
                                                @Html.DisplayTextFor(model => model.SelectedStartTime)
                                            </span>
                                            <div class="checkbox">
                                                <label><input id="showBench" type="checkbox">Show Bench</label>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <table id="lineupTable" class="table table-bordered table-condensed table-striped" data-toggle="table" style="width:auto">
                                <thead>
                                    <tr>
                                        <th rowspan="2"><span id="submitted" class="label label-success">Submitted</span><span id="unsubmitted" class="label label-danger">Unsubmitted</span></th>
                                        <th rowspan="2" class="text-capitalize">@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().Position)</th>
                                        <th rowspan="2" class="text-capitalize">@Html.DisplayNameFor(model => model.LineupRows.FirstOrDefault().Name)</th>
                                        <th rowspan="2" class="text-capitalize submit-show">GP</th>
                                        <th colspan="3" class="text-capitalize text-center submit-show">@Html.DisplayDescriptionFor(model => model.LineupRows.FirstOrDefault().DayPoints)</th>
                                        <th rowspan="2" class="text-capitalize submit-hide hidden-xs">@Html.DisplayNameFor(model => model.LineupRows.FirstOrDefault().Schedule)</th>
                                    </tr>
                                    <tr>
                                        <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().DayPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().DayPoints)</span></th>
                                        <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().IntervalPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().IntervalPoints)</span></th>
                                        <th class="submit-show"><span data-toggle="tooltip" data-placement="bottom" title=@Html.DisplayNameFor(model=>model.LineupRows.FirstOrDefault().TotalPoints)>@Html.DisplayShortNameFor(model => model.LineupRows.FirstOrDefault().TotalPoints)</span></th>
                                    </tr>
                                </thead>
                                <tbody id="lineup"></tbody>
                            </table>
                        </div>
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="well-lg">
                                        <div id="efficiency" class="pie"></div>
                                        <div id="efficiency-label" class="pie-label"></div>
                                        <h4 class="text-center">lineup efficiency</h4>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="well-lg">
                                        <div id="distribution" class="pie"></div>
                                        <h4 class="text-center">points distribution</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tabRoster">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form class="form-inline">
                                        <div class="form-group">
                                            <button type="button" class="btn btn-success btn-xs-text" aria-label="Left Align" onclick="saveRoster()" @(Model.CanSave ? "" : "disabled" )>
                                                <span class="glyphicon glyphicon-save" aria-hidden="true"></span><span class="hidden-xs">Save</span>
                                            </button>
                                            <button type="button" class="btn btn-info btn-xs-text" data-toggle="modal" data-target="#addPlayerModal" aria-label="Left Align" @(Model.CanSave ? "" : "disabled" )>
                                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                                <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> <span class="hidden-xs">Add/Drop</span>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-xs-text" aria-label="Left Align" onclick="importRoster()">
                                                <span class="glyphicon glyphicon-import" aria-hidden="true"></span> <span class="hidden-xs">Position Import</span>
                                            </button>
                                            <button id="trade" type="button" class="btn btn-primary btn-xs-text" data-toggle="modal" data-target="#tradeModal" aria-label="Left Align" @(Model.CanTrade ? "" : "disabled" )>
                                                <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> <span class="hidden-xs">Trade</span>
                                                <span class="badge">1</span>
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <table id="rosterTable" class="table table-bordered table-condensed table-striped" data-toggle="table" style="width:auto">
                                <thead>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.RosterPlayers.FirstOrDefault().Number)</td>
                                        <td>@Html.DisplayNameFor(model => model.RosterPlayers.FirstOrDefault().Name)</td>
                                        <td>@Html.DisplayNameFor(model => model.RosterPlayers.FirstOrDefault().EligiblePositions)</td>
                                        <td>@Html.DisplayNameFor(model => model.RosterPlayers.FirstOrDefault().Team)</td>
                                        <td>@Html.DisplayNameFor(model => model.RosterPlayers.FirstOrDefault().Points)</td>
                                    </tr>
