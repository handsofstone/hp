@model HP.Models.StandingsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header with-nav-tabs bg-primary">
        <ul class="nav nav-tabs" id="poolTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="standings-tab" , href="#tabStandings" data-toggle="tab" aria-controls="tagStandings" aria-selected="true">Standings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="trades-tab" href="#tabTrades" data-toggle="tab" aria-controls="tagTrades" aria-selected="false">Trades</a>
            </li>
        </ul>
    </div>
    <div class="tab-content" id="poolTabContent">
        <div class="tab-pane fade show active" id="tabStandings">
            @Html.Partial("_Standings", Model)
        </div>
        <div class="tab-pane fade" id="tabTrades">
            @Html.Partial("_Trades", Model)
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/standings")