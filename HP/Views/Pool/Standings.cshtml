@model HP.Models.StandingsViewModel

@{
    ViewBag.Title = "Standings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Standings</h2>
    <div class="form-group">
        @Html.LabelFor(model => Model.SelectedSeasonID)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(model => Model.SelectedSeasonID, Model.Seasons, new { @class = "form-control" })
    </div>

<table class="table table-bordered" style="width:auto">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(model=>model.Standings[0].Rank)</td>
            <td>@Html.DisplayNameFor(model=>model.Standings[0].Team.Name)</td>
            <td>@Html.DisplayNameFor(model=>model.Standings[0].Gain)</td>
            <td>@Html.DisplayNameFor(model=>model.Standings[0].PointTotal)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (HP.Models.Standing standing in Model.Standings)
        {
            <tr>
                <td>@standing.Rank.ToString()</td>
                <td>@standing.Team.Name.ToString()</td>
                <td>@standing.Gain.ToString()</td>
                <td>@standing.PointTotal.ToString()</td>
            </tr>
        }
    </tbody>
</table>


