@model HP.Models.StandingsViewModel

<div class="row">
    <div class="col">
        <div class="card my-sm-2">
            <div class="card-header">
                <div class="form-row align-items-center">
                    <div class="col-auto">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                @Html.LabelFor(model => Model.SelectedSeasonID, new { @class = "input-group-text d-none d-sm-block" })
                            </div>
                            @Html.DropDownListFor(model => Model.SelectedSeasonID, Model.Seasons, new { id = "DraftSeasonID", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="form-inline">
                            <button id="orderDraft" type="button" class="btn btn-success btn-default btn-xs-text" data-toggle="modal" data-target="#orderModal" aria-label="Left Align">
                                <i class="material-icons" aria-hidden="true">sort</i> Set Order
                            </button>
                            <button type="button" class="btn btn-info btn-default btn-xs-text" onclick="AddRound">
                                <i class="material-icons" aria-hidden="true">playlist_add</i> Add Round
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="picks" class="row"></div>


<script type="text/plain" id="tmpl_picks">
    {{~it.DraftPicks: Round}}
    <div class="col-sm-12 col-md-6 col-lg-auto">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td colspan="4">Round {{=Round.Round}}</td>
                </tr>
                <tr>
                    <td class="fit text-center">Pick</td>
                    <td class="fit text-center">Team</td>
                    <td>Player</td>
                </tr>
            </thead>
            <tbody>
                {{~Round.Picks: Pick}}
                <tr id="Pick{{=Pick.Id}}">
                    <td class="fit"><span class="form-control-plaintext text-center">{{=Pick.PickOrder}}</span></td>
                    <td class="fit"><span class="form-control-plaintext text-center">{{=Pick.OwnerName}}</span></td>
                    <td>
                        <div class="input-group collapse multi-collapse{{=Pick.Id}} {{?Pick.LastName}} show {{?}}" id="pickDisplay{{=Pick.Id}}">
                            <label type="text" class="form-control">
                                <a target="_blank" href="https://www.nhl.com/player/{{=Pick.Selection}}">{{?Pick.LastName}}{{=Pick.LastName}}, {{=Pick.FirstName}} ({{=Pick.NHLTeamCode}},#{{=Pick.PlayerNo}}){{?}}</a>
                            </label>
                            <div class="input-group-append {{?!(it.isAdmin||it.teamIds.indexOf(Pick.Owner)>=0)}} d-none {{?}}">
                                <button type="button" class="editpick btn btn-info btn-xs-text" data-toggle="collapse" data-target=".multi-collapse{{=Pick.Id}}" aria-expanded="false" aria-controls="pickSelect{{=Pick.Id}} pickDisplay{{=Pick.Id}}">
                                    <i class="material-icons">edit</i>
                                </button>
                            </div>
                        </div>
                        <input type="text" class="autocomplete form-control nhlsearch collapse multi-collapse{{=Pick.Id}} {{?!Pick.LastName}} show {{?}}" id="pickSelect{{=Pick.Id}}" placeholder="Select" data-toggle="" {{?!(it.isAdmin||it.teamIds.indexOf(Pick.Owner)>=0)}} readonly {{?}}>

                    </td>
                </tr>
                {{~}}
            </tbody>
        </table>
    </div>
    {{~}}
</script>

<script type="text/plain" id="tmpl_pickDisplay">
    <a target="_blank" href="https://www.nhl.com/player/{{=it.PlayerId}}">{{?it.LastName}}{{=it.LastName}}, {{=it.FirstName}}{{?}} ({{=it.TeamCode}},#{{=it.PlayerNo}})</a>
</script>